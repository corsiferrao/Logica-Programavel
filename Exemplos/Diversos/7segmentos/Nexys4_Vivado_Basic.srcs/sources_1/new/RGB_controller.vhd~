LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
USE IEEE.STD_LOGIC_UNSIGNED.ALL;
USE IEEE.NUMERIC_STD.ALL;

entity RGB_controller is
	port(
	   SW 			: in  STD_LOGIC_VECTOR (15 downto 0);
       BTN 			: in  STD_LOGIC_VECTOR (4 downto 0);
       CLK 			: in  STD_LOGIC;
       LED 			: out  STD_LOGIC_VECTOR (15 downto 0);
       SSEG_CA 		: out  STD_LOGIC_VECTOR (7 downto 0) := X"00";
       SSEG_AN 		: out  STD_LOGIC_VECTOR (7 downto 0) := X"00";
       UART_TXD 	: out  STD_LOGIC := '0';
       RGB1_Red		: out  STD_LOGIC := '0';
       RGB1_Green	: out  STD_LOGIC := '0';
       RGB1_Blue	: out  STD_LOGIC := '0';
       RGB2_Red		: out  STD_LOGIC := '0';
       RGB2_Green	: out  STD_LOGIC := '0';
       RGB2_Blue	: out  STD_LOGIC := '0';
       micClk       : out STD_LOGIC  := '0';
       micLRSel     : out STD_LOGIC  := '0';
       micData      : in STD_LOGIC;
       ampPWM       : out STD_LOGIC := '0';
       ampSD        : out STD_LOGIC	:= '0'	
	);
end RGB_controller;

architecture Behavioral of RGB_controller is

--are the ASCII values of the indicated character.
constant WELCOME_STR : CHAR_ARRAY(0 to 26) := 
(	
	X"0A",  --\n
	X"0D",  --\r
	X"4E",  --N
	X"0D"	--\r
); 

begin

----------------------------------------------------------
------                LED Control                  -------
----------------------------------------------------------

    LED(7 downto 0)  <= SW(7 downto 0);
    LED(15 downto 8) <= X"F0";

			 			 
----------------------------------------------------------
------           7-Seg Display Control             -------
----------------------------------------------------------



end Behavioral;

